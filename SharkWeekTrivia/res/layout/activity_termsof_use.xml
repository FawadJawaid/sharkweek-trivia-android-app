<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_common"
    tools:context="com.tenpearls.sharkweektrivia.HowtoPlayActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topbar_without_curve"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/discoveryimgView"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/topbar_logo" />

        <ImageButton
            android:id="@+id/activity_main_content_button_menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/discoveryimgView"
            android:layout_marginLeft="24dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/cross_icon" />
    </RelativeLayout>

    <View
        android:id="@+id/linebelowLogo"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/termsofUseHeader"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp"
        android:background="@color/whiteBackground" />

    <TextView
        android:id="@+id/termsofUseContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linebelowLogo"
        android:layout_alignRight="@+id/linebelowLogo"
        android:layout_below="@+id/linebelowLogo"
        android:layout_marginTop="21dp"
        android:text="abs de hjk lk kklklkk kjmmmm kjkjidtc"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/termsofUseHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/terms"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00fff9" />

</RelativeLayout>

