<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md__transparent" >

    <TextView
        android:id="@+id/questionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/possibleAnswer1"
        android:layout_alignRight="@+id/possibleAnswer1"
        android:textColor="@color/whiteBackground" />

    <Button
        android:id="@+id/possibleAnswer1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/possibleAnswer2"
        android:layout_below="@+id/possibleAnswer2"
        android:layout_marginTop="16dp"
        android:background="#33ffffff"
        android:paddingBottom="2dp"
        
        android:textColor="@color/whiteBackground" />

    <Button
        android:id="@+id/possibleAnswer3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/possibleAnswer1"
        android:layout_below="@+id/possibleAnswer1"
        android:layout_marginTop="14dp"
        android:background="#33ffffff"
        android:paddingBottom="2dp"
        
        android:textColor="@color/whiteBackground" />

    <Button
        android:id="@+id/possibleAnswer4"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/possibleAnswer3"
         android:layout_alignLeft="@+id/possibleAnswer3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#33ffffff"
        
        android:textColor="@color/whiteBackground" />

    <Button
        android:id="@+id/possibleAnswer2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#33ffffff"
        android:paddingBottom="2dp"
        
        android:textColor="@color/whiteBackground"
         />

    <ImageView
        android:id="@+id/imageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/possibleAnswer2"
        android:layout_alignLeft="@+id/possibleAnswer2"
        android:layout_alignRight="@+id/possibleAnswer2"
        android:paddingBottom="10dp"
        android:layout_below="@+id/questionView"
        android:layout_marginTop="30dp"
        android:background="@drawable/questionimageborder" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>